<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_singalTest"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginBottom="5dip"
        android:text="单项测试"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_auto_Test"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginBottom="5dip"
        android:text="自动测试"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_ageing_test"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginBottom="5dip"
        android:text="老化测试"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_result_Test"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginBottom="5dip"
        android:text="测试报告"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_recover"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginBottom="5dip"
        android:text="恢复出厂设置"
        android:textSize="25sp"
        android:visibility="gone" />
    <Button
        android:id="@+id/serial_port"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginBottom="5dip"
        android:text="配置串口"
        android:onClick="serialport"
        android:textSize="25sp" />
    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_margin="5dip"
        android:background="@drawable/btn_exit_bg"
        android:text="退出"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp" />
</LinearLayout>