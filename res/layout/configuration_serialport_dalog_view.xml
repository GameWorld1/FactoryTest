<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="16dp">

        <TextView
            style="@android:style/TextAppearance.Theme.Dialog"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="UHF"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/uhf_EditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:hint="波特率"
            android:inputType="number"
            android:textColor="@android:color/white" />
        <EditText
            android:id="@+id/uhf_uart_EditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:hint="uart"
            android:inputType="number"
            android:textColor="@android:color/white" />
        <Spinner
            android:id="@+id/uhf_Spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:entries="@array/serialport_path" />

        <CheckBox
            android:id="@+id/uhf_CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="16dp">

        <TextView
            style="@android:style/TextAppearance.Theme.Dialog"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="HF"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/hf_EditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:hint="波特率"
            android:inputType="number"
            android:textColor="@android:color/white" />
        <EditText
            android:id="@+id/hf_uart_EditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:hint="uart"
            android:inputType="number"
            android:textColor="@android:color/white" />

        <Spinner
            android:id="@+id/hf_Spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:entries="@array/serialport_path" />

        <CheckBox
            android:id="@+id/hf_CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="16dp">

        <TextView
            style="@android:style/TextAppearance.Theme.Dialog"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="LF"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/lf_EditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:hint="波特率"
            android:inputType="number"
            android:textColor="@android:color/white" />
        <EditText
            android:id="@+id/lf_uart_EditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:hint="uart"
            android:inputType="number"
            android:textColor="@android:color/white" />

        <Spinner
            android:id="@+id/lf_Spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:entries="@array/serialport_path" />

        <CheckBox
            android:id="@+id/lf_CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消" />

        <Button
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定" />

    </LinearLayout>

</LinearLayout>